<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/soundtouch2_popup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soundtouch2cleanpopup"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="9" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/soundtouch2_pop_up_txtViewOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/main_activity_soundtouch2_popup_dont_miss_out"
                android:textColor="#FF0000"
                android:textSize="@dimen/soundtouch2_dialog_title_size"
                android:textStyle="bold" >
            </TextView>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.6" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.05"
            android:orientation="horizontal" >

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.9" />

            <ImageView
                android:id="@+id/soundtouch2_popup_btn_link"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:scaleType="fitCenter"
                android:src="@drawable/link_to_store_btn" />

            <View
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.9" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5.45" >
        </View>

        <ImageView
            android:id="@+id/soundtouch2_popup_btn_ok"
            android:layout_width="@dimen/soundtouch2_dialog_btn_width"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/soundtouch_popup_btn_ok" />
    </LinearLayout>
    </LinearLayout>