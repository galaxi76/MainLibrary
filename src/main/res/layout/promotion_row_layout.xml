<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/promotion_row_image_container"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/promotion_dialog_row_margin_left"
        android:layout_weight="1.6" >

        <ImageView
            android:id="@+id/promotion_row_icon"
            android:layout_width="@dimen/promotion_dialog_row_icon_image_height"
            android:layout_height="@dimen/promotion_dialog_row_icon_image_height"
            android:layout_gravity="center_vertical"
            android:padding="3dp"            
            android:src="@drawable/promotion_dialog_icon_5" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/promotion_dialog_row_text_margin_left"
        android:layout_weight="7" >

        <TextView
            android:id="@+id/promotion_row_view_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="@dimen/promotion_dialog_row_text_size"
            android:text="TextView" />
    </FrameLayout>

</LinearLayout>